        <record id="view_remove_bg_kanban" model="ir.ui.view">
            <field name="name">remove_bg.model.kanban</field>
            <field name="model">remove_bg.model</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id" />
                    <field name="processed_image" invisible="processed_image == False" />
                    <templates>
                        <t t-name="kanban-box">
                            <t t-if="record.processed_image.raw_value">
                                <!-- <div class="o_kanban_record d-flex flex-grow-1 flex-md-shrink-1 flex-shrink-0"
                                     data-id="datapoint_2" tabindex="0"> -->
                                    <div class="record_data">
                                        <img class="o_kanban_image_inner_pic"
                                            t-att-src="'http://localhost:8069/web/image?model=remove_bg.model&amp;field=processed_image&amp;id=' + record.id.raw_value"/>
                                    <!-- </div> -->
                                </div>
                            </t>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        

        <record id="view_image_background_removal_form" model="ir.ui.view">
            <field name="name">image.background.removal.form</field>
            <field name="model">remove_bg.model</field>
            <field name="arch" type="xml">
                <form string="Image Background Removal" create="0">
                    <sheet>
                        <group>
                            <field name="image" widget="image" filename="name"
                                invisible="processed_image != False" />
                            <field name="processed_image" widget="image" filename="name"
                                invisible="processed_image == False" />
                            <button name="remove_background" string="Remove" type="object"
                                class="btn-primary" invisible="processed_image != False" />
                            <button name="download_processed_image" string="Download" type="object"
                                invisible="processed_image == False" class="btn btn-primary" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_home_menu" model="ir.actions.act_window">
            <field name="name">Gallary</field>
            <field name="res_model">remove_bg.model</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="view_remove_bg_kanban" />
            <!-- <field name="view_id" ref="view_image_background_removal_form"/> -->
        </record>


    </data>
</odoo>